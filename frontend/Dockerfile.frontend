FROM node:20-alpine

# Create app directory
WORKDIR /app

# Copy package.json separately to cache dependencies
COPY package*.json ./

# Install dependencies (if not available, install later inside container)
RUN npm install

# Copy the rest of the project
COPY . .

# Expose Vite port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host"]
